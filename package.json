{
  "name": "@algorandfoundation/puya-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:examples": "tsx src/cli.ts build examples --output-awst",
    "dev:testing": "tsx src/cli.ts build examples/testing-types",
    "dev:voting": "tsx src/cli.ts build examples/voting/contract.algo.ts --output-awst",
    "dev:hello": "tsx src/cli.ts build examples/hello-world/contract.algo.ts",
    "dev:hello-abi": "tsx src/cli.ts build examples/hello-world-abi/contract.algo.ts",
    "dev:calculator": "tsx src/cli.ts build examples/calculator/contract.algo.ts",
    "dev:tealscript": "tsx src/cli.ts build examples/tealscript/example.algo.ts",
    "dev:approvals": "tsx src/cli.ts build tests/approvals",
    "audit": "better-npm-audit audit",
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "build": "run-s build:*",
    "build:0-clean": "rimraf dist coverage",
    "build:1-lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "build:2-check-types": "tsc -p tsconfig.json",
    "build:3-build": "rollup -c --configPlugin typescript",
    "build:4-copy-pkg-json": "tstk copy-package-json -c",
    "build:5-copy-readme": "copyfiles ./README.md ./dist",
    "test": "vitest run",
    "test:approvals": "vitest run tests/approvals/_run.spec.ts",
    "test:expected-output": "vitest run tests/expected-output/_run.spec.ts",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter junit --outputFile test-results.xml",
    "test:debug-build": "rollup --config examples/rollup.config.ts --configPlugin typescript",
    "install-local-packages": "npm run algo-ts && npm run algo-ts-testing",
    "algo-ts": "run-s algo-ts:*",
    "algo-ts:build": "cd packages/algo-ts && npm run build",
    "algo-ts:install": "npm i -D @algorandfoundation/algo-ts@./packages/algo-ts/dist",
    "algo-ts-testing": "run-s algo-ts-testing:*",
    "algo-ts-testing:build": "cd packages/algo-ts-testing && npm run build",
    "algo-ts-testing:install": "npm i -D @algorandfoundation/algo-ts-testing@./packages/algo-ts-testing/dist",
    "npm-install-all": "cd packages/algo-ts && npm i && npm run build && cd ../algo-ts-testing && npm i && npm run build && cd ../../ && npm i",
    "script:op-types": "tsx ./scripts/generate-op-types.ts packages/algo-ts/src/op-types.ts && cd packages/algo-ts && eslint src/op-types.ts --fix",
    "script:op-metadata": "tsx ./scripts/generate-op-metadata.ts src/awst_build/op-metadata.ts && eslint src/awst_build/op-metadata.ts --fix",
    "script:op-ptypes": "tsx ./scripts/generate-op-ptypes.ts src/awst_build/ptypes/op-ptypes.ts && eslint src/awst_build/ptypes/op-ptypes.ts --fix"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@algorandfoundation/algo-ts": "file:packages/algo-ts/dist",
    "@algorandfoundation/algo-ts-testing": "file:packages/algo-ts-testing/dist",
    "@makerx/eslint-config": "3.1.1",
    "@makerx/prettier-config": "2.0.1",
    "@makerx/ts-toolkit": "^4.0.0-beta.17",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/node20": "20.1.4",
    "@types/node": "20.12.11",
    "@vitest/coverage-v8": "1.6.0",
    "better-npm-audit": "3.7.3",
    "change-case": "^5.4.4",
    "copyfiles": "2.4.1",
    "eslint": "8.56.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "rollup": "4.17.2",
    "tsx": "4.9.3",
    "typescript": "^5.5.2",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "@makerx/color-console": "^1.0.1",
    "commander": "^12.0.0",
    "glob": "^10.3.14",
    "zod": "^3.23.8"
  }
}
